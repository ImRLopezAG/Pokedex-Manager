<main class='container mt-l'>
  <div class='row mb-2'>
    <div class='col-12'>
      <h1 class='text-center'>
        <img src='/assets/img/region.ico' />
        Regions
        <img src='/assets/img/region.ico' />
      </h1>
    </div>
  </div>
  {{#if hasRegion}}
    {{! Card }}
    <section class='row mx-auto'>
      {{#each regions as |region|}}
        <div
          class='card mb-3 col ms-2 px-0'
          style='min-width: 22rem; max-width: 25rem;'
        >
          <div class='row g-0'>
            <div class='col-md-4'>
              <img
                src='{{region.Image}}'
                class='img-fluid rounded-start fill'
                alt='{{region.Name}}'
              />
            </div>
            <div class='col-md-8 py-0 pb-1'>
              <div class='card-body px-2 py-2'>
                <h5 class='card-title mb-1'>
                  <strong>Name: </strong>{{region.Name}}
                </h5>
                <div class='form'>
                  <form action='/editRegion' method='POST'>
                    <a
                      class='btn btn-info float-start'
                      href='/admin/edit-Region/{{region.id}}?edit=true'
                    >Edit</a>
                  </form>
                  <form action='/admin/delete-Region' method='post'>
                    <input
                      type='hidden'
                      name='RegionId'
                      value='{{region.id}}'
                      id='regionId'
                    />
                    <button
                      class='btn btn-danger float-end'
                      type='submit'
                      onclick="return confirm('Are you sure you want to delete this region?');"
                    >Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </section>
    {{! end Card }}
  {{else}}
    <div class='row'>
      <div class='col-12'>
        <h1 class='text-center'>No Regions Found</h1>
      </div>
    </div>
  {{/if}}

</main>